{# templates/events.html.twig #}

{% extends 'base.html.twig' %}

{% block title %} Lanzarote Fit > View Events {% endblock %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
    <br/>
    <h2>View Events </h2>
    <br/>

    {% if events is null %}
        <p>No events available.</p>
        <a class="btn btn-primary" href="{{ path('create_event') }}">Create</a>
    {% else %}
        {% for event in events %}
            <p> {{ event.sport.name }} @ {{ event.place.name }} @ {{ event.date|date('d/m/Y H:i') }} || <a href="{{ path('view_event', {'id': event.id}) }}"> View Event </a>  </p>
        {% endfor %}
    {% endif %}

    </div>
</div>

{% endblock %}
