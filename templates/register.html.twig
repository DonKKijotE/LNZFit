{% extends 'base.html.twig' %}

{% block title %} Lanzarote Fit > User Register {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <br/>
            <h2>User Register</h2>

            <form action="{{ path('user_register') }}" method="post">
                <div class="row">
                    <div class="col-12 form-group">
                        {{ form_row(form.username, { attr: { 'class': 'form-control', 'placeholder': 'Username' } }) }}
                    </div>
                    <div class="col-12 form-group">
                        {{ form_row(form.name, { attr: { 'class': 'form-control', 'placeholder': 'Name' } }) }}
                    </div>
                    <div class="col-12 form-group">
                        {{ form_row(form.surname, { attr: { 'class': 'form-control', 'placeholder': 'Surname' } }) }}
                    </div>
                    <div class="col-12 form-group">
                        {{ form_row(form.email, { attr: { 'class': 'form-control', 'placeholder': 'Email' } }) }}
                    </div>
                    <div class="col-12 form-group">
                        {{ form_row(form.plainPassword.first, { attr: { 'class': 'form-control', 'placeholder': 'Password' } }) }}
                    </div>
                    <div class="col-12 form-group">
                        {{ form_row(form.plainPassword.second, { attr: { 'class': 'form-control', 'placeholder': 'Repeat password' } }) }}
                    </div>
                    <div class="col-lg-2 pt-3">
                        <button class="btn btn-primary" type="submit">Register</button>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}
